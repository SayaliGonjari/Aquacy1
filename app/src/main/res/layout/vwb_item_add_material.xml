<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tablerow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_CustName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="CustVendor Name"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_Addr"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:text="Address"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_mob"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Mobile"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_Email"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:padding="12dp"
                    android:text="Email"
                    android:maxLines="1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_MType"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:text="Meter Type"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_MNo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:text="Meter No"
                    android:maxLines="1"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_ConnNo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_border_row"
                    android:gravity="center"
                    android:text="ConnNo"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textColor="@color/black" />



                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border_row"
                    android:padding="9dp">


                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/edit_icon1"

                        />

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:tint="@color/red"
                        android:src="@drawable/ic_delete"

                        />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </HorizontalScrollView>
</LinearLayout>