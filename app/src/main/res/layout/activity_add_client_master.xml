        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Client Master"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/img_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/basic_tick"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:visibility="visible"
                android:tint="@color/white"/>




        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_fname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:drawableLeft="@drawable/user_16"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/colorPrimary"
                            android:hint="First Name"
                            android:padding="10dp"
                            android:textColor="#111"
                            android:textColorHint="@color/black"
                            android:textSize="14dp"
                            android:visibility="visible" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_lname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:drawableLeft="@drawable/user_16"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/colorPrimary"
                            android:hint="Last Name"
                            android:padding="10dp"
                            android:textColor="#111"
                            android:textColorHint="@color/black"
                            android:textSize="14dp"
                            android:visibility="visible" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/home"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Address"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_mobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/smartphone_16"
                        android:drawablePadding="8dp"
                        android:hint="Mobile No."
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/emailID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/email_24"
                        android:drawablePadding="8dp"
                        android:hint="Email id"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txtaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/actiontype"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Meter Type"
                    android:padding="5dp"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_AMR"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_grey"
                        android:gravity="center"
                        android:text="AMR"
                        android:textAllCaps="false"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_noAMR"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_grey"
                        android:gravity="center"
                        android:text="Non-AMR"
                        android:textAllCaps="false"
                        android:textSize="13sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/stroke" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/actiontype"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Connection Type"
                    android:padding="5dp"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_resident"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_grey"
                        android:gravity="center"
                        android:text="Residential"
                        android:textAllCaps="false"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_commercial"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_grey"
                        android:gravity="center"
                        android:text="Commerical"
                        android:textAllCaps="false"
                        android:textSize="13sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/stroke" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_connectionNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/number_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Connection No."
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_meterNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/number_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Meter No."
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>