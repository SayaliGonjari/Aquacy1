<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ClientListActivity">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:text="Client Master"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/img_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/quantum_ic_refresh_white_24"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_weight="2.5"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:visibility="visible"
            android:tint="@color/white"/>



    </LinearLayout>

    <HorizontalScrollView
        android:layout_below="@id/main"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tablerow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_CustName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:text="CustVendor Name"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_Addr"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:text="Address"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_mob"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:text="Mobile"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_Email"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:gravity="center"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:padding="12dp"
                    android:text="Email"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_MType"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:text="Meter Type"
                    android:inputType="number"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_MNo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:text="Meter No"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txt_ConnNo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:gravity="center"
                    android:text="ConnNo"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:padding="12dp"
                    android:textColor="@color/black" />
                

                <TextView
                    android:id="@+id/txt_action"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_row1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:text="Action"
                    android:textColor="@color/black" />

            </TableRow>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_clientDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </TableLayout>




    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>


</RelativeLayout>